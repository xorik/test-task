{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <div id="create-post-form">
                    {{ form(postForm) }}
                    <br>
                </div>
            </div>
        </div>

        <div class="row">
            <div id="posts" class="col-xs-12">
                {% for post in posts if posts|length > 0 %}
                    <div class="post">
                        <p>{{ post.content }}</p>

                        <ul class="comments">
                            <input type="text" class="form-control" placeholder="Add comment" data-id="{{post.getId()}}">
                            {% for comment in post.getComments() %}
                                <li>{{comment.getText()}} <a href data-id="{{comment.getId()}}">remove</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                    <hr>
                {% endfor %}

                {% if posts|length == 0 %}
                    <div>No posts yet</div>
                {% endif %}
            </div>
        </div>
    </div>


    <script>
        $(function() {
          $('#post-form').submit(function (e) {
            e.preventDefault();
            $.ajax({
              type: 'POST',
              url: '/api/posts',
              data: $('#post-form').serialize(),
              success: function(post)
              {
                $('#posts').append('<div class="post"><p>'+post.content+'</p><ul class="comments"><input type="text" class="form-control" placeholder="Add comment" data-id="'+post.id+'"></ul></div><hr>')
              }
            });
          });

          $('#posts').on('keypress', 'input', function (e) {
            if (e.keyCode === 13 && $(this).val().length > 0) {
              var t = this;
              $.ajax({
                type: 'POST',
                url: '/api/posts/'+$(this).data('id')+'/comments',
                data: {comment: {text: $(this).val()}},
                success: function(comment)
                {
                  $(t).parent().append('<li>'+comment.text+' <a href data-id="'+comment.id+'">remove</a></li>');
                  $(t).val('');
                }
              });
            }
           })
        });

        $('#posts').on('click', 'ul.comments a', function (e) {
          e.preventDefault();
          var t = this;
          $.ajax({
            type: 'DELETE',
            url: '/api/comments/'+$(this).data('id'),
            success: function()
            {
              $(t).parent().remove();
            },
            error: function () {
              alert('access denied');
            }
          });
        })
    </script>
{% endblock %}